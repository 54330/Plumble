<?xml version="1.0" encoding="utf-8"?>

<!-- An overlay over a user's avatar to indicate that they're deafened. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient android:type="radial"
                android:endColor="@color/ripple_talk_state_disabled"
                android:startColor="@android:color/transparent"
                android:gradientRadius="50%"/>

            <stroke
                android:width="2dp"
                android:color="@color/ripple_talk_state_disabled"/>

            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_action_audio_muted" />
</layer-list>