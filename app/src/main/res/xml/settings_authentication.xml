<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="certificateGenerate"
        android:summary="@string/certificateGenerateSum"
        android:title="@string/certificateGenerate">
        <intent
            android:targetPackage="com.morlunk.mumbleclient"
            android:targetClass="com.morlunk.mumbleclient.preference.CertificateGenerateActivity"/>
    </Preference>

    <Preference
        android:summary="@string/pref_certificate_summary"
        android:title="@string/pref_certificate_title">
        <intent
            android:targetPackage="com.morlunk.mumbleclient"
            android:targetClass="com.morlunk.mumbleclient.preference.CertificateSelectActivity"/>
    </Preference>

    <Preference
        android:summary="@string/pref_import_certificate_summary"
        android:title="@string/pref_import_certificate_title">
        <intent
            android:targetPackage="com.morlunk.mumbleclient"
            android:targetClass="com.morlunk.mumbleclient.preference.CertificateImportActivity" />
    </Preference>

    <Preference
        android:summary="@string/pref_export_certificate_summary"
        android:title="@string/pref_export_certificate_title">
        <intent
            android:targetPackage="com.morlunk.mumbleclient"
            android:targetClass="com.morlunk.mumbleclient.preference.CertificateExportActivity" />
    </Preference>

    <Preference
        android:key="clearTrust"
        android:title="@string/clearServerCertificates"
        android:summary="@string/clearServerCertificatesSum"/>

    <EditTextPreference
        android:key="defaultUsername"
        android:summary="@string/defaultUsernameSum"
        android:title="@string/defaultUsername"
        android:defaultValue="@string/defaultUsernameDefault"/>
</PreferenceScreen>